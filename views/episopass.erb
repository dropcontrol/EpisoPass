    <script>
    $(function() {
        // enable Sortable
        $("#main").sortable();
        $("#main").disableSelection();

        // arrange qas array order by new order
        $("#main").on("sortupdate", function(event, ui) {
            var newQas = [];
            $("#main li").each(function(index) {
                var q = $(this).find('input').first().val();
                var o = $(qas).filter(function(){
                    return (this.question === q);
                });
                newQas.push(o[0]);
            });
            qas = newQas;
            data['qas'] = qas;
        });
    });
    </script>
